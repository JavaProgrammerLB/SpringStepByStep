<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

	<import resource="persistence-context.xml" />

	<bean id="userRepository"
		class="com.in28minutes.data.impl.UserDataServiceImpl" />
	<bean id="todoRepository"
		class="com.in28minutes.data.impl.TodoDataServiceImpl" />

	<bean id="userService" class="com.in28minutes.service.impl.UserServiceImpl" />
	<bean id="todoService" class="com.in28minutes.service.impl.TodoServiceImpl" />

</beans>